{
  "compilerOptions": {
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES6"],
    "types": ["reflect-metadata"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@entities": ["data/db/entities"],
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@jwt": ["core/security/jwt"],
      "@crypto": ["core/security/crypto"],
      "@env": ["core/env/env.conf"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
